# Nom de l'ex√©cutable
NAME = push_swap

# Compilateur
CC = cc

# Options de compilation
CFLAGS = -Wall -Wextra -Werror

# Fichiers sources
SRC = push_swap.c

# Fichiers objets
OBJ = $(SRC:.c=.o)

# Couleurs (pour rendre le terminal plus joli)
GREEN = \033[0;32m
YELLOW = \033[0;33m
RED = \033[0;31m
NC = \033[0m

# R√®gle par d√©faut
all: $(NAME)

$(NAME): $(OBJ)
	@$(CC) $(CFLAGS) $(OBJ) -o $(NAME)
	@echo "$(GREEN)‚úÖ Compilation termin√©e avec succ√®s !$(NC)"

%.o: %.c
	@$(CC) $(CFLAGS) -c $< -o $@
	@echo "$(YELLOW)Compilation de $< ...$(NC)"

clean:
	@rm -f $(OBJ)
	@echo "$(RED)üßπ Fichiers objets supprim√©s.$(NC)"

fclean: clean
	@rm -f $(NAME)
	@echo "$(RED)üßΩ Ex√©cutable supprim√©.$(NC)"

re: fclean all

# Emp√™che Make d‚Äôinterpr√©ter ces noms comme des fichiers
.PHONY: all clean fclean re
